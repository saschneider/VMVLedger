- specific_title [t('shared.titles.uploads')]
- add_breadcrumb t('shared.titles.uploads'), :uploads_path
- content_for :menu do
  = render 'shared/menu'

.container
  - if @election
    %h1= @election.name
    %h2
      = t('shared.titles.uploads')
      - if policy(Upload).new?
        .float-right= link_to t('shared.controls.new'), new_upload_path, class: 'btn btn-primary'
  - else
    %h1
      = t('shared.titles.uploads')
      - if policy(Upload).new?
        .float-right= link_to t('shared.controls.new'), new_upload_path, class: 'btn btn-primary'

  - if @uploads.count > 0
    %p.lead= t('.instructions')
  - else
    %p.lead= t('.no_uploads')

.container#list
  = render partial: 'list', locals: { uploads: @uploads }

