%html
  %head
  %link{ href: 'https://fonts.googleapis.com/css?family=Raleway:400,700', rel: 'stylesheet'}
  %style
    body { font-size: 12pt; color: rgb(51, 51, 51); font-family: 'Raleway', sans-serif; background-color: #eeeeee; }
    body div { margin: 15px; padding: 10px; border: 1px solid; border-radius: 4px; border-color: grey; background-color: white; }
  %body
    %div
      = yield

      %p Best wishes,

      %p= "The #{t('app_title')} Team"

      %p= "Web: #{link_to t('company_web'), t('company_web'), target: '_blank'}".html_safe
      %p= "Email: #{mail_to t('company_email')}".html_safe
